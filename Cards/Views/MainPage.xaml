<UserControl x:Class="Cards.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:Cards.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Панель управления -->
        <Border Grid.Column="0"
                Grid.Row="1"
                Margin="10"
                CornerRadius="5"
                Background="DarkGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>



                <ListBox Grid.Row="1"
                         SelectedItem="{Binding SelectedPath}"
                         ItemsSource="{Binding Collection}"
                         Style="{StaticResource {x:Type ListBox}}"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5"
                                        Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="14"
                                           Foreground="White" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>


        <!-- Основная область с карточками -->
        <Border Grid.Column="1"
                Grid.Row="1"
                CornerRadius="5"
                BorderThickness="1"
                Margin="10"
                BorderBrush="LightGray">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Hidden"
                          Padding="10">
                <ItemsControl ItemsSource="{Binding Cards}"
                              Background="Transparent">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical"
                                        Margin="10">
                                <GroupBox Background="{Binding Brush}"
                                          BorderBrush="#FF555555"
                                          BorderThickness="2"
                                          Width="200"
                                          Height="250"
                                          RenderTransformOrigin="0.5,0.5"
                                          Foreground="Black">

                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown">
                                            <i:InvokeCommandAction Command="{Binding DataContext.FlipCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                   CommandParameter="{Binding}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>

                                    <GroupBox.Triggers>
                                        <EventTrigger RoutedEvent="PreviewMouseDown">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard Storyboard="{StaticResource FlipCardAnimation}" />
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </GroupBox.Triggers>

                                    <GroupBox.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform x:Name="CardScaleTransform" />
                                            <RotateTransform x:Name="CardRotateTransform" />
                                        </TransformGroup>
                                    </GroupBox.RenderTransform>
                                    <TextBlock Text="{Binding CurrentText}"></TextBlock>
                                    <!--
                                    <Grid Background="Transparent">
                                        <TextBlock Background="Transparent"
                                                   Margin="10"
                                                   Visibility="{Binding FrontFlip}"
                                                   Text="{Binding MainText}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="16"
                                                   Foreground="White" />
                                        <TextBlock Background="Transparent"
                                                   Margin="10"
                                                   Visibility="{Binding BackFlip}"
                                                   Text="{Binding SecondText}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="16"
                                                   Foreground="White" />
                                    </Grid>
                                    -->
                                </GroupBox>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
